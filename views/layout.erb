<span><a  style="margin-left:3%;font-size: 3em;" href='/allotSpecialNumber'>Special Allotment</a></span>
<%= yield %>
<% if session[:message] %>
<div id="blinker"><h><%= session[:message] %></h></div>
<% session[:message] = nil%>
<%end%>
</body>

</html>